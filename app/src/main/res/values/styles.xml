<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTitleText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="TitleText" parent="MainTitleText">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlaceholderText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ButtonText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RegularText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="RegularTextAnotherVariant">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MediumVariantText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SmallText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlaylistNameText">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/playlist_name_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaylistDescriptionText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/playlist_description_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AudioPlayerSmallText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text_size_second_variant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AudioPlayerSmallTextGrey">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text_size_second_variant</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="SwitchWithKnob">
        <item name="thumbTint">@color/grey</item>
        <item name="trackTint">@color/another_grey</item>
    </style>

    <style name="SearchBarStyle">
        <item name="android:background">@drawable/rectangle_rounded_soild</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawableTint">?attr/colorSecondaryVariant</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="InputBarStyle">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ArrowBackImage">
        <item name="android:contentDescription">@string/image_of_back_button</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="SmallButton">
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabLayoutLibrary">
        <item name="tabTextColor">@color/yp_black</item>
        <item name="tabIndicatorColor">@color/yp_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="BottomNavigationTextAppearance">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
    </style>

    <style name="MainBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearance</item>
        <item name="itemIconTint">@drawable/bottom_navigation_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_selector</item>
    </style>

    <style name="PlaylistCover">
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="BottomSheetStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/royal_blue</item>
    </style>

    <style name="TitleStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="CustomDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleStyle</item>
    </style>

</resources>