<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MediumVariantText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SwitchWithKnob">
        <item name="thumbTint">@color/royal_blue</item>
        <item name="trackTint">@color/royal_blue_opacity49</item>
    </style>

    <style name="SmallButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="TabLayoutLibrary">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="MainBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/yp_black</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearance</item>
        <item name="itemIconTint">@drawable/bottom_navigation_selector_night</item>
        <item name="itemTextColor">@drawable/bottom_navigation_selector_night</item>
    </style>

    <style name="PlaylistCover">
        <item name="android:backgroundTint">@color/yp_black</item>
    </style>

    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/yp_black</item>
    </style>
</resources>